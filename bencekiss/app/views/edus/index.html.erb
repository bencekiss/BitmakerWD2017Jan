<h1>Edus#index</h1>
<p>
  <%= link_to "New Education", new_bence_edu_path(Bence.first) %>
</p>
<div class="educations">
  <% @edus.each do |education| %>
    <div class="education">
      <div class="edu-name">
        <%= education.name %>
      </div>
      <div class="edu-school">
        <%= education.school %>, <%= education.location %>
      </div>
      <div class="edu-years">
        <%= education.start_date %> - <%= education.end_date %>
      </div>
      <div class="edu-description">
        <%= education.description %>
      </div>
    </div>

    <p>
      <%= link_to "Edit education", edit_bence_edu_path(Bence.first, education.id) %>
    </p>
  <% end %>
</div>
