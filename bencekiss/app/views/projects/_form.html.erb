<%= form_for [Bence.first, @project] do |f| %>
  <div class="fields">
    <%= f.label :name, value: "Title" %>
    <%= f.text_field :name %>
  </div>
  <div class="fields">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="fields">
    <%= f.label :url, value: "Project's website" %>
    <%= f.text_field :url %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
