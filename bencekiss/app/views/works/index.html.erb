<h1>Works#index</h1>
<p>
  <%= link_to "New Work Experience", new_bence_work_path(Bence.first) %>
</p>
<div class="works">
  <% @works.each do |work| %>
    <div class="work">
      <div class="work-name">
        <%= work.name %>
      </div>
      <div class="work-company">
        <%= work.company %>
      </div>
      <div class="work-location">
        <%= work.location %>, <%= work.start_date %> - <%= work.end_date %>
      </div>
      <div class="work-description">
        <%= work.description %>
      </div>
    </div>
    <p>
      <%= link_to "Edit Experience", edit_bence_work_path(Bence.first, work) %>
    </p>
  <% end %>
</div>
